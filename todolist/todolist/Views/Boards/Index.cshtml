@model IEnumerable<BEUToDoList.tblBoard>

@{
    ViewBag.Title = "Index";
}

<body class="index is-preload">
    <div id="page-wrapper">

        @Html.Partial("Menu")

        <div id="main">
            <header class="special container">
                <span class="icon solid fa-chess-board"></span>
                <h2>TABLEROS</h2>
            </header>

            <section class="wrapper style4 container">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name_board)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.id_participants)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tblUser.first_name)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name_board)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.id_participants)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.first_name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id_board }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id_board }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id_board })
                            </td>
                        </tr>
                    }

                </table>

            </section>

        </div>
    </div>
</body>


