@model BEUToDoList.tblList

@{
    ViewBag.Title = "Edit";
}
    <body class="index is-preload">
        @Html.Partial("../Navigation/Menu")
        <section id="banner">

            <div id="main">
                <header class="special container">
                    <span class="icon solid fa-edit"></span>
                    <h2>EDITAR LISTA</h2>
                </header>

                <section class="inner" id="registro">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.id_list)
                            <br />

                            <div class="form-group">
                                @Html.LabelFor(model => model.name_list, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.name_list, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.name_list, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />

                            <div class="form-group">
                                @Html.LabelFor(model => model.id_board, "id_board", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("id_board", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.id_board, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </section>

            </div>
            </section>
    </body>






