@model IEnumerable<BEUToDoList.tblList>

@{
    ViewBag.Title = "Index";
}
    <body class="index is-preload">
        @Html.Partial("../Navigation/Menu")
        <section id="banner">

            <div id="main">
                <header class="special container">
                    <span class="icon solid fa-list"></span>
                    <h2>LISTAS DISPONIBLES</h2>
                </header>
                <section class="inner" id="registro">
                    <p style="text-align: left">
                        @Html.ActionLink("Nuevo", "Create")
                    </p>
                    <br /><br />
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.name_list)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tblBoard.name_board)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name_list)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblBoard.name_board)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id_list }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id_list }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id_list })
                                </td>
                            </tr>
                        }

                    </table>


                </section>

            </div>
            </section>
    </body>


