@model IEnumerable<BEUToDoList.tblTask>

@{
    ViewBag.Title = "Index";
}

    <body class="index is-preload">
        @Html.Partial("../Navigation/Menu")
        <section id="banner">

            <div id="main">
                <header class="special container">
                    <span class="icon solid fa-tasks"></span>
                    <h2>LISTA DE TAREAS</h2>
                </header>

                <section class="inner" id="registro">
                    <p style="text-align: left">
                        @Html.ActionLink("Nuevo", "Create")
                    </p>
                    <br /><br />
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descr)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.asigned_to)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tblList.name_list)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.descr)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.asigned_to)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tblList.name_list)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.id_task }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.id_task }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.id_task })
                                </td>
                            </tr>
                        }

                    </table>
                </section>

            </div>
            </section>
    </body>




